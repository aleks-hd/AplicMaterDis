<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.AplicMaterDis" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>


    <style name="Theme.AplicMaterDisNight" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#7F2AE8</item>
        <item name="colorPrimaryVariant">#7B17F6</item>
        <item name="colorOnPrimary">#0044FF</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">#97831A</item>
        <item name="colorSecondaryVariant">#79AEB6</item>
        <item name="colorOnSecondary">#A39F9F</item>

        <item name="android:textColor">@color/white</item>

        <item name="bottomAppBarStyle">@style/ThemeOverlay.MaterialComponents.Dark</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="ThemeNew" parent="Theme.AplicMaterDis">

        <item name="colorPrimary">@android:color/holo_blue_bright</item>
        <item name="colorPrimaryVariant">#AA00FF</item>
        <item name="colorOnPrimary">#00C853</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">#C5895C</item>
        <item name="colorSecondaryVariant">#F16700</item>
        <item name="colorOnSecondary">#712020</item>

    </style>

    <style name="ThemeNewLight" parent="Theme.AplicMaterDis">

        <item name="colorPrimary">#C3DC7B</item>
        <item name="colorPrimaryVariant">#2B6705</item>
        <item name="colorOnPrimary">#C9ECB3</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">#9DDA77</item>
        <item name="colorSecondaryVariant">#64CA8E</item>
        <item name="colorOnSecondary">#64AA38</item>

    </style>

</resources>